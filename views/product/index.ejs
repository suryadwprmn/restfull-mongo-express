<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/app.css">
    <title>Produk</title>
</head>
<body>
    <h1>All Produk</h1> 
    <a href="products/create">Create</a>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Brand</th>
                <th>Price</th>
                <th>Color</th>
                <th>Category</th>
            </tr>
        </thead>
        <tbody>
            <% for (const product of products) { %>
                <tr>
                    <td><%= product.name %></td>
                    <td><%= product.brand %></td>
                    <td><%= product.price %></td>
                    <td><%= product.color %></td>
                    <td><%= product.category %></td>
                </tr>
            <% } %>
        </tbody>
    </table>
</body>
</html>
